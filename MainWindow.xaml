<Window x:Class="VS_to_VSC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VS_to_VSC"
        mc:Ignorable="d"
        Title="VS to VSCode Converter" Height="380" Width="500"
        Icon="icon/app.ico"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="VS to VSCode Converter" 
                       FontSize="22" 
                       FontWeight="ExtraBold" 
                       HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- 統合ドロップ・クリックエリア -->
        <Border x:Name="DropArea"
                Grid.Row="1"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                Background="Transparent"
                BorderThickness="2"
                CornerRadius="12"
                AllowDrop="True"
                Drop="DropArea_Drop"
                DragOver="DropArea_DragOver"
                DragLeave="DropArea_DragLeave"
                MouseDown="DropArea_MouseDown"
                Cursor="Hand"
                ToolTip="ここにファイルをドロップするか、クリックしてファイルを選択">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="ここにファイルをドロップ" 
                           FontSize="18" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="またはクリックしてファイルを選択" 
                           FontSize="13" 
                           Margin="0,8,0,0"
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}"/>
                <TextBlock Text="(.sln / .slnx)" 
                           FontSize="11" 
                           Margin="0,15,0,0"
                           HorizontalAlignment="Center"
                           Opacity="0.6"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
